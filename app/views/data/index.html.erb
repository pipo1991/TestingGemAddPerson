<h2 style="background-color:red; color: white;">
<%= flash[:notice]%>
<h2>

<h3></h3>
<div class="Sign_Form">
	<h1>Adding Person Form</h1>
	<%= form_for(:person, :url => {:controller => 'data', :action => 'addPerson'}) do |f| %>
	<h3>The authenication Details</h3>
	<p>
		User:</br> <%= f.text_field :site%>
	</p>
	<p>
		API Token:</br> <%= f.text_field :api%>
	</p>
	<h3>Person to Add</h3>
	<p>
		Name:</br> <%= f.text_field :name%>
	</p>
	<p>
		Last Name:</br> <%= f.text_field :last%>
	</p>
	<p>
		Job Title:</br> <%= f.text_field :job%>
	</p>
	<p>
		Company:</br> <%= f.text_field :company%>
	</p>
	<p>
		Email:</br> <%= f.text_field :email%>
	</p>
	<p>
		Phone:</br> <%= f.text_field :phone%>
	</p>
	<p>
		Website:</br> <%= f.text_field :web%>
	</p>
	<%= f.submit "Add Person" %>
	<% end %>
	
</div>
